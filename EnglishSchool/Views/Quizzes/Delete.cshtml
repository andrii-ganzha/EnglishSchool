@model EnglishSchool.Models.Quiz

@{
    ViewBag.Title = "Видалити урок";
}

<h2>Видалити</h2>

<h3>Ви упевнені, що бажаєте видалити цей урок?</h3>
<div>
    <h4>Урок</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Назва
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися до списку", "Index")
        </div>
    }
</div>
