@model EnglishSchool.Models.Word

@{
    ViewBag.Title = "Видалити слово";
}

<h2>Видалити</h2>

<h3>Ви упевнені, що бажаєте видалити це слово?</h3>
<div>
    <h4>Слово</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Урок
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quiz.Name)
        </dd>

        <dt>
            Слово
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            Переклад
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Translate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися до списку", "Index")
        </div>
    }
</div>
